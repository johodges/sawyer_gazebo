<?xml version="1.0"?>
<launch>

  <arg name="trex_enabled" default="true" />
  <arg name="world_name" default="$(find sawyer_gazebo)/worlds/clearpath_playpen.world"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(arg world_name)"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>
  <group if="$(arg trex_enabled)">
    <include file="$(find sawyer_gazebo)/launch/spawn_sawyer_trex.launch" />
    <include file="$(find trex_sawyer_moveit_config)/launch/move_group.launch"/>
    <include file="$(find trex_sawyer_moveit_config)/launch/moveit_rviz.launch"/>
  </group>
  <group unless="$(arg trex_enabled)">
    <include file="$(find sawyer_gazebo)/launch/spawn_sawyer_base.launch"/>
    <include file="$(find trex_sawyer_moveit_config)/launch/move_group.launch"/>
    <include file="$(find sawyer_moveit_config)/launch/moveit_rviz.launch"/>
  </group>

</launch>
